@page
@model Proyecto_Cine.Pages.Admin.Proveedores.ProveedoresModel
@{
    Layout = null;
    ViewData["Title"] = "Proveedores - Admin";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="/css/Sitio.css" />
</head>
<body>
<div class="admin-panel">

    <!-- Sidebar -->
    <aside class="sidebar">
        <div class="logo">
            <img src="~/images/logo.svg" alt="Logo" class="logo-img" />
        </div>
        <h2>Administrador</h2>
        <a href="/Admin/PanelAdmin" class="btn">Inicio Admin</a>
        <a href="/Admin/CarteleraAdmin" class="btn">Pel√≠culas</a>
        <a href="/Admin/FuncionesAdmin" class="btn">Funciones</a>
        <a href="/Admin/SalasAdmin" class="btn">Salas</a>
        <a href="/Admin/Proveedores" class="btn">Proveedores</a>
        <a href="/Admin/Productos/Inventario" class="btn">Inventario</a>
    </aside>

    <!-- Contenido principal -->
    <main class="content">
        <h2>üì¶ Proveedores</h2>
