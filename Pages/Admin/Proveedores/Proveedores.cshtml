        <a href="/Admin/Proveedores/Alta" class="btn" style="width: fit-content;">+ Dar de alta</a>


        <div class="scroll-x">
            <table class="table-admin">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Raz√≥n Social</th>
                        <th>RFC</th>
                        <th>Domicilio</th>
                        <th>Tel√©fono</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var p in Model.Proveedores)
                    {
                        <tr>
                            <td>@p.Nombre</td>
                            <td>@p.RazonSocial</td>
                            <td>@p.RFC</td>
                            <td>@p.Domicilio</td>
                            <td>@p.Telefono</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <h2 style="margin-top: 3rem;">üßæ Compras</h2>
        <p>Compras realizadas a proveedores</p>

        <a href="/Admin/Proveedores/Compras/NuevaCompra" class="btn" style="width: fit-content;">+ Compra</a>


        <div class="scroll-x">
            <table class="table-admin">
                <thead>
                    <tr>
                        <th>Proveedor</th>
                        <th>Producto</th>
                        <th>Cantidad</th>
                        <th>Fecha</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var c in Model.Compras)
                    {
                        <tr>
                            <td>@c.NombreProveedor</td>
                            <td>@c.NombreProducto</td>
                            <td>@c.Cantidad</td>
                            <td>@c.Fecha.ToString("yyyy-MM-dd HH:mm")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </main>
</div>
</body>
</html>
